{
  "version": 2,
  "builds": [
    {
      "src": "risetop/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "logic/app.py",
      "use": "@vercel/python",
      "config": { "includeFiles": ["logic/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(vogel|biayaterendah|barat_laut|runall|optimize)",
      "methods": ["POST"],
      "dest": "logic/app.py"
    },
    {
      "src": "/api/.*",
      "dest": "logic/app.py"
    },
    {
      "src": "/",
      "dest": "risetop/index.html"
    },
    {
      "src": "/[^/.]+",
      "dest": "risetop/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "risetop/$1"
    }
  ]
}
